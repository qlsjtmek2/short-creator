# Google Gemini API (https://aistudio.google.com/)
GEMINI_API_KEY=your_gemini_api_key_here

# Pexels API Key (https://www.pexels.com/api/)
PEXELS_API_KEY=your_pexels_api_key_here

# Google Custom Search API (https://console.cloud.google.com/)
# For Google Image Provider - requires Custom Search Engine setup
GOOGLE_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_CX=your_custom_search_engine_id_here

# ElevenLabs API Key (https://elevenlabs.io/)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here (optional)

# Typecast API Key (https://typecast.ai/)
TYPECAST_API_KEY=your_typecast_api_key_here

# OpenAI API Key (https://platform.openai.com/) - for TTS
OPENAI_API_KEY=your_openai_api_key_here

# Imgflip Account (https://imgflip.com/signup) - for Meme Generation (optional)
IMGFLIP_USERNAME=your_imgflip_username_here
IMGFLIP_PASSWORD=your_imgflip_password_here

# KLIPY API Key (https://docs.klipy.com/) - for GIF Search (optional, free forever)
# Test Key: 100 calls/minute, Production Key: unlimited (apply at Publisher Admin Panel)
KLIPY_API_KEY=your_klipy_api_key_here